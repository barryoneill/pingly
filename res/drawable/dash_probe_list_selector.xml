<!-- controls focus/pressed states of the dashboard 'Probe List' icon -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="true" android:drawable="@drawable/dash_probelist_focused" />
    <item android:state_pressed="true" android:state_focused="true" android:drawable="@drawable/dash_probelist_pressed" />
    <item android:state_pressed="true" android:state_focused="false" android:drawable="@drawable/dash_probelist_pressed" />
    <!-- {pressed=false,focused=false} and others -->
    <item android:drawable="@drawable/dash_probelist_normal" />
</selector>