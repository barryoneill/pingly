<?xml version="1.0" encoding="utf-8"?>
<!-- selector for the title bar icon background -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="true" android:drawable="@drawable/title_icon_bg_focused" />
    <item android:state_pressed="true" android:state_focused="true" android:drawable="@drawable/title_icon_bg_pressed" />
    <item android:state_pressed="true" android:state_focused="false" android:drawable="@drawable/title_icon_bg_pressed" />
    <!-- {pressed=false,focused=false} and others -->
    <item android:drawable="@android:color/transparent" />
</selector>