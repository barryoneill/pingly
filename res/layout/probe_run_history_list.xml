<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:id="@+id/titleBar"
            style="@style/TitleBar"
            android:layout_alignParentTop="true">

        <ImageView style="@style/TitleBarHomeButton" />


        <ImageView style="@style/TitleBarSeparator"/>

        <TextView
                style="@style/TitleBarText"
                android:text="Probe Run History"/>

        <ImageView style="@style/TitleBarSeparator"/>

        <ImageButton
                android:id="@+id/but_clearHistory"
                style="@style/TitleBarClickable"
                android:src="@android:drawable/ic_menu_delete"  />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/probeSummaryContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleBar"
            android:orientation="vertical">

        <TextView
                android:id="@+id/probe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Probe Name"
                style="@style/FormLabel"
                android:paddingLeft="5dp"
                android:paddingTop="5dp">
        </TextView>

        <TextView
                android:id="@+id/probe_summary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="probe summary"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/probeSummaryContainer"
            android:orientation="vertical">

         <ListView
                android:id="@+id/probeRunList"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="#FF004400"
                android:dividerHeight="1dp"
                android:drawSelectorOnTop="false">
        </ListView>


        <!-- TODO: add styling -->
        <LinearLayout
                android:id="@+id/emptyListElem"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginTop="50dip"
                android:layout_gravity="center">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="No run history for this probe"
                    android:layout_marginBottom="10dip"
                    android:gravity="center"/>
            <Button
                    android:id="@+id/probeHistory_runNowBut"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Run Now!"
                    android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>