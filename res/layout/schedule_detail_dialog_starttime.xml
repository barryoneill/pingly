<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:pingly="http://schemas.android.com/apk/res/net.nologin.meep.pingly"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp">

    <RadioGroup
            android:id="@+id/schedule_starttime_radiogrp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal">
        <RadioButton
                android:id="@+id/schedule_starttime_radionow"
                android:text="Now"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                />
        <RadioButton
                android:id="@+id/schedule_starttime_radiofuture"
                android:text="Specific Time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:checked="false"/>
    </RadioGroup>

    <LinearLayout
                android:id="@+id/schedule_starttime_futureControlsGrp"
                    android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                   android:orientation="vertical"
                    android:visibility="visible">

        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="fill_parent"
                      android:orientation="horizontal">

            <TextView
                    android:id="@+id/schedule_starttime_dateinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On 21 March 2013"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    style="@style/FormLabel">
            </TextView>
            <Button
                    android:id="@+id/schedule_starttime_datebut"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:text="Change Date"
                    android:gravity="center_vertical|right">
            </Button>

        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="fill_parent"
                      android:orientation="horizontal">

            <TextView
                    android:id="@+id/schedule_starttime_timeinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="At 11:10"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    style="@style/FormLabel">
            </TextView>
            <Button
                    android:id="@+id/schedule_starttime_timebut"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:text="Change Time"
                    android:gravity="center_vertical|right">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
