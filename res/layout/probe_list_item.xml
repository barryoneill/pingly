<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip" 
    >

    <!-- TODO: move formatting to theme  -->
    <TextView
        android:id="@+id/probe_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"        
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="[item name placeholder]"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/probe_item_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/probe_item_name"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="[item type placeholder]"
        android:textStyle="italic"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/probe_item_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@id/probe_item_type"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="[item desc placeholder]"
        android:textSize="14sp" />

</RelativeLayout>