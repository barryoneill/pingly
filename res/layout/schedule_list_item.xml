<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ListItemContainer">

    <ImageView
            android:id="@+id/schedule_entry_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/schedule_details_icon"
            style="@style/ListItemStandardIcon"/>

    <TextView
            android:id="@+id/schedule_entry_probeinfo"
            android:layout_toRightOf="@id/schedule_entry_icon"
            android:layout_alignParentTop="true"
            android:text="[probe info]"
            style="@style/ListItemTextHeader"/>

    <TextView
            android:id="@+id/schedule_entry_startinfo"
            android:layout_below="@id/schedule_entry_probeinfo"
            android:layout_toRightOf="@id/schedule_entry_icon"
            android:text="[start info]"
            style="@style/ListItemTextNormal"/>


    <TextView
            android:id="@+id/schedule_entry_repeatinfo"
            android:layout_below="@id/schedule_entry_startinfo"
            android:layout_toRightOf="@id/schedule_entry_icon"
            android:text="[repeat info]"
            style="@style/ListItemTextNormal"/>


</RelativeLayout>