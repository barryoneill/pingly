<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pingly="http://schemas.android.com/apk/res/net.nologin.meep.pingly"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <!--  title bar  -->
    <LinearLayout
            android:id="@+id/titleBar"
            style="@style/TitleBar"
            android:layout_alignParentTop="true">

        <ImageView style="@style/TitleBarHomeButton" />

        <ImageView style="@style/TitleBarSeparator"/>

        <TextView
                style="@style/TitleBarText"
                android:text="Schedule"/>

        <!--  buttons for new probe?  -->

    </LinearLayout>

    <LinearLayout
            android:id="@+id/footerBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            style="@android:style/ButtonBar">

        <Button
                android:id="@+id/but_scheduledetail_save"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"/>

        <Button
                android:id="@+id/but_scheduledetail_cancel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"/>
    </LinearLayout>

    <!-- new probe form -->
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/footerBar"
            android:layout_below="@id/titleBar"
            android:scrollbars="vertical">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/scheduled_probe_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Probe Summary"
                    style="@style/FormLabel"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp">
            </TextView>

            <TextView
                    android:id="@+id/scheduled_probe_summary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="probe summary"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp">
            </TextView>

            <View android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:background="?android:attr/listDivider"/>

            <net.nologin.meep.pingly.view.PinglyBooleanPref
                    android:id="@+id/scheduled_probe_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    pingly:name="Active:"
                    pingly:summaryOn="Scheduled probe is active"
                    pingly:summaryOff="Scheduled probe is inactive"/>

            <View android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:background="?android:attr/listDivider"/>

            <net.nologin.meep.pingly.view.PinglyExpanderPref
                    android:id="@+id/scheduled_probe_repetition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    pingly:name="Repetition:"
                    pingly:summary=""
                    pingly:onClick="configureRepetition"
                    />

            <View android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:background="?android:attr/listDivider"/>

            <net.nologin.meep.pingly.view.PinglyExpanderPref
                    android:id="@+id/scheduled_probe_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    pingly:name="Starts:"
                    pingly:onClick="configureStartTime"
                    />

            <View android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:background="?android:attr/listDivider"/>

            <!-- coming later
            <View android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:background="?android:attr/listDivider"/>

            <net.nologin.meep.pingly.view.PinglyExpanderPref
                    android:id="@+id/scheduled_probe_active_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    pingly:name="Active on Days:"
                    pingly:summary="Every Day"
                    pingly:onClick="configureActiveDays"/>
            -->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>