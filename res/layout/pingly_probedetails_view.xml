<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60dp">

    <ImageView
            android:id="@+id/view_probedetails_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/probe_details_icon"
            style="@style/ListItemStandardIcon"/>

    <TextView
            android:id="@+id/view_probedetails_icontext"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="[type]"
            style="@style/ProbeDetailsIconOverlayText"
            />

    <TextView
            android:id="@+id/view_probedetails_name"
            android:layout_toRightOf="@id/view_probedetails_icon"
            android:layout_alignParentTop="true"
            android:text="[item name placeholder]"
            style="@style/ListItemTextHeader"/>

    <TextView
            android:id="@+id/view_probedetails_desc"
            android:layout_below="@id/view_probedetails_name"
            android:layout_toRightOf="@id/view_probedetails_icon"
            android:singleLine="false"
            android:maxLines="2"
            android:text="[item desc placeholder]"
            style="@style/ListItemTextNormal"/>

    <ImageView
            android:id="@+id/view_probedetails_separator_bottom"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            style="@style/SeparatorHorizontal"/>

</RelativeLayout>